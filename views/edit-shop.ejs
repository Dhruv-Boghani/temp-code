<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Shop</title>
  <link rel="stylesheet" href="/edit-shop.css">
</head>
<body>
  <h1>Edit Shop</h1>
  <form action="/edit-shop/<%= shop._id %>" method="POST">
    <label for="shopName">Shop Name:</label>
    <input type="text" id="shopName" name="shopName" value="<%= shop.name %>" required>

    <label for="ownerName">Owner Name:</label>
    <input type="text" id="ownerName" name="ownerName" value="<%= shop.owner %>" required>

    <label for="Address">Address:</label>
    <input type="text" id="Address" name="Address" value="<%= shop.address %>" required>

    <label for="mobileNumber">Mobile Number:</label>
    <input type="text" id="mobileNumber" name="mobileNumber" value="<%= shop.moNumber %>" required>

    <h2>Select Products:</h2>
    <% products.forEach(product => { %>
      <div>
        <input type="checkbox" name="selectedProducts[]" value="<%= product._id %>"
          <% if (shop.allProduct.some(p => p._id.toString() === product._id.toString())) { %> checked <% } %>>
        <label><%= product.name %></label>
      </div>
    <% }) %>

    <button type="submit">Update Shop</button>
  </form>
</body>
</html>
