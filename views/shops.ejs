<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Shops</title>
  <link rel="stylesheet" href="/css/shops.css">
</head>
<body>
  <h1>All Shops</h1>

  <table border="1">
    <thead>
      <tr>
        <th>Shop Name</th>
        <th>Owner</th>
        <th>Address</th>
        <th>Mobile Number</th>
        <th>Products</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% shops.forEach(shop => { %>
        <tr>
          <td><%= shop.name %></td>
          <td><%= shop.owner %></td>
          <td><%= shop.address %></td>
          <td><%= shop.moNumber %></td>
          <td>
            <ul>
              <% shop.allProduct.forEach(product => { %>
                <li><%= product.name %></li>
              <% }) %>
            </ul>
          </td>
          <td>
            <a href="/edit-shop/<%= shop._id %>">
              <button>Edit</button>
            </a>
            <form action="/delete-shop/<%= shop._id %>" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this shop?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <a href="/add-shop">
    <button>Add New Shop</button>
  </a>
</body>
</html>
